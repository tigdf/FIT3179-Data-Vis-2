{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Change in Population of European Capital Cities between 2000-2020",
      "fontSize": 16
    },
    "data": {
      "url": "https://raw.githubusercontent.com/tigdf/FIT3179-Data-Vis-2/main/datasets/European%20Capital%20City%20population%20data%20(Eurostat).csv"
    },
    "width": 600,
    "height": 450,
    "transform": [
      {
        "filter": {
          "field": "City",
          "oneOf": [
            "Moscow",
            "London",
            "Berlin",
            "Madrid",
            "Rome",
            "Paris",
            "Bucharest",
            "Minsk",
            "Warsaw",
            "Vienna",
            "Stockholm",
            "Belgrade",
            "Kiev",
            "Prague",
            "Copenhagen",
            "Sofia",
            "Dublin",
            "Brussels",
            "Amsterdam",
            "Oslo",
            "Helsinki",
            "Athens"
          ]
        }
      },
      {"filter": {
        "field": "Year", 
        "oneOf": [2000, 2020]
        }
      }
    ],
    "encoding": {
      "x": {
        "field": "Population",
        "type": "quantitative",
        "title": "Population"
      },
      "y": {
        "field": "City",
        "type": "nominal",
        "title": "City",
        "axis": {
          "offset": 10,
          "ticks": false,
          "minExtent": 1,
          "domain": false
        }
      }
    },
    "layer": [
      {
        "mark": "line",
        "encoding": {
          "detail": {"field": "City", "type": "nominal"},
          "size": {"value": 2},
          "opacity": {"value": 0.5}
        }
      },
      {
        "mark": {"type": "point", "filled": true},
        "encoding": {
          "color": {
            "field": "Year",
            "type": "ordinal",
            "scale": {
              "domain": [2000, 2020]
            },
            "title": "Year"
          },
          "size": {"value": 120},
          "opacity": {"value": 1},
        "tooltip": [
          {"field": "City", "type": "nominal", "title": "City"},
          {"field": "Population", "type": "quantitative", "title": "Population"}
      ]
        }
      }
    ]
  }