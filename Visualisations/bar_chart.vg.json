{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Cost of Common Amenities in European Capital Cities",
    "fontSize": 16
  },
  "width": 700,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/tigdf/FIT3179-Data-Vis-2/main/datasets/Cost%20of%20common%20amenities%20(Numbeo).csv"
  },
  "params": [
    {
      "name": "Region_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Central and Eastern Europe",
          "Western Europe",
          "Southern Europe",
          "Northern Europe"
        ],
        "labels": [
          "Show All",
          "Central and Eastern Europe",
          "Western Europe",
          "Southern Europe",
          "Northern Europe"
        ],
        "name": "Region Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Region_selection == null || datum.Region == Region_selection"
    }
  ],
  "mark": {
    "type": "bar",
    "tooltip": true
  },
  "encoding": {
    "x": {
      "aggregate": "sum",
      "field": "Price",
      "type": "quantitative",
      "title": "Total Cost (USD)"
    },
    "y": {
      "field": "City",
      "type": "nominal",
      "title": "City"
    },
    "color": {
      "type": "nominal",
      "field": "Item",
      "scale": {
          "domain": [
              "Water (600ml bottle)",
              "Fast Food (Combo Meal)",
              "Movie ticket",
              "Weekly Public Transport",
              "Weekly Rent"
          ],
          "range": ["#9d0208", "#ffba08", "#e85d04",  "#fff3b0", "#81b29a"]
      },
      "title": "Item"
  }
  }
}